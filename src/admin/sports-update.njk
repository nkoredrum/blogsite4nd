        <div class="admin-section">
            <h2>Latest Results</h2>
            <form id="results-form" class="admin-form">
                <div class="form-group">
                    <label for="result-date">Date</label>
                    <input type="date" id="result-date" name="result-date" required>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="team1">Team 1</label>
                        <input type="text" id="team1" name="team1" required>
                    </div>
                    <div class="form-group">
                        <label for="score1">Score</label>
                        <input type="number" id="score1" name="score1" min="0" required>
                    </div>
                    <div class="form-group">
                        <label for="score2">Score</label>
                        <input type="number" id="score2" name="score2" min="0" required>
                    </div>
                    <div class="form-group">
                        <label for="team2">Team 2</label>
                        <input type="text" id="team2" name="team2" required>
                    </div>
                </div>
                
                <div class="form-actions">
                    <button type="submit" class="btn-primary">Add Result</button>
                </div>
            </form>
            
            <div class="data-table-container">
                <h3>Current Results</h3>
                <table id="results-table" class="admin-table">
