---
layout: base.njk
title: Home
---

<section class="hero hero-minimal">
    <div class="container">
        <h1>Nkore Drum</h1>
        <p>Stories from Western Uganda</p>
    </div>
</section>

<div class="container">
    <div class="home-layout">
        <main class="home-main">
            <div class="featured-post">
                {% set firstPost = collections.posts | reverse | first %}
                {% if firstPost %}
                <article class="featured-card">
                    {% if firstPost.data.image %}
                    <div class="featured-image">
                        <img src="{{ firstPost.data.image }}" alt="{{ firstPost.data.title }}">
                    </div>
                    {% endif %}
                    <div class="featured-content">
                        <div class="blog-meta">
                            <span class="blog-category">{{ firstPost.data.category }}</span>
                            <span class="blog-date">{{ firstPost.date | date("DD MMM YYYY") }}</span>
                        </div>
                        <h2><a href="{{ firstPost.url }}">{{ firstPost.data.title }}</a></h2>
                        <p class="featured-excerpt">{{ firstPost.data.summary }}</p>
                        <a href="{{ firstPost.url }}" class="read-more">Read Full Story</a>
                    </div>
                </article>
                {% endif %}
            </div>

            <div class="blog-grid">
                {% for post in collections.posts | reverse %}
                    {% if loop.index0 > 0 %}
                    <article class="blog-card">
                        {% if post.data.image %}
                        <div class="blog-card-image">
                            <img src="{{ post.data.image }}" alt="{{ post.data.title }}">
                        </div>
                        {% endif %}
                        <div class="blog-card-content">
                            <div class="blog-meta">
                                <span class="blog-category">{{ post.data.category }}</span>
                                <span class="blog-date">{{ post.date | date("DD MMM YYYY") }}</span>
                            </div>
                            <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
                            <p class="blog-excerpt">{{ post.data.summary }}</p>
                            <a href="{{ post.url }}" class="read-more">Continue Reading</a>
                        </div>
                    </article>
                    {% endif %}
                {% endfor %}
            </div>
        </main>

        <aside class="home-sidebar">
            <div class="sidebar-widget about-widget">
                <h3>About Nkore Drum</h3>
                <p>Your trusted source for stories, culture, and news from Western Uganda. Discover the heart of our region through authentic storytelling.</p>
            </div>

            <div class="sidebar-widget">
                <h3>Categories</h3>
                <ul class="category-list">
                    <li><a href="/category/culture">Culture & Traditions</a></li>
                    <li><a href="/category/tourism">Tourism</a></li>
                    <li><a href="/category/food">Local Cuisine</a></li>
                    <li><a href="/category/education">Education</a></li>
                    <li><a href="/category/sports">Sports</a></li>
                    <li><a href="/category/health">Health</a></li>
                    <li><a href="/category/agriculture">Agriculture</a></li>
                    <li><a href="/category/business">Business</a></li>
                </ul>
            </div>

            <div class="sidebar-widget">
                <h3>Recent Stories</h3>
                <ul class="recent-posts">
                    {% for post in collections.posts | reverse %}
                        {% if loop.index0 < 5 %}
                        <li>
                            <a href="{{ post.url }}">
                                <span class="post-title">{{ post.data.title }}</span>
                                <span class="post-date">{{ post.date | date("DD MMM YYYY") }}</span>
                            </a>
                        </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </aside>
    </div>
</div> 